@model AbstractContentPage

<div class="col">
    <div class="card shadow-sm">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: @Model.PageTitle" preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#55595c" />
            <text x="50%" y="50%" fill="#eceeef" dy=".3em">@Model.PageTitle</text>
        </svg>
        <div class="card-body">
            <p class="card-text">@Html.PropertyFor(x => x.MetaDescription)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="@Url.ContentUrl(Model.ContentLink)">View</a>
                    @* <a type="button" class="btn btn-sm btn-outline-secondary">Edit</a> *@
                </div>
                <small class="text-muted">@Html.PropertyFor(x => x.Category)</small>
            </div>
        </div>
    </div>
</div>
